<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="560.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="ru.kuranov.client.ui.Window">
    <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="850.0">
        <Label text="Cloud Storage">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
    <HBox alignment="TOP_CENTER" layoutY="26.0" prefHeight="27.0" prefWidth="850.0">
        <VBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <Label fx:id="myComputerLabel" text="My computer">
                <padding>
                    <Insets left="20.0" right="20.0"/>
                </padding>
            </Label>

        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="198.0" HBox.hgrow="ALWAYS">

            <Label fx:id="cloudStorageLabel" text="Cloud storage">
                <padding>
                    <Insets left="20.0" right="20.0"/>
                </padding>
            </Label>

        </VBox>

        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
    <HBox layoutX="-2.0" layoutY="52.0" prefHeight="508.0" prefWidth="850.0">

        <VBox prefHeight="498.0" prefWidth="367.0">

            <ListView fx:id="homeFileList" onMouseClicked="#updateClientFilesList" prefHeight="349.0" prefWidth="304.0"
                      VBox.vgrow="ALWAYS"/>

            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="498.0" prefWidth="145.0">

            <Button fx:id="buttonUpDirectory" minWidth="70.0" mnemonicParsing="false" prefHeight="26.0"
                    prefWidth="145.0" text="↑↑">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>
            <Button fx:id="buttonOpenFile" onAction="#openFile" minWidth="70.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="146.0" text="open">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>
            <Button fx:id="buttonCreateFile" onAction="#createFile" minWidth="70.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="135.0" text="create">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>
            <Button fx:id="buttonReceiveFile" minWidth="70.0" mnemonicParsing="false" prefHeight="26.0"
                    prefWidth="142.0" text="&lt;&lt; download">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>
            <Button fx:id="buttonSendFile" minWidth="70.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="131.0"
                    text="upload &gt;&gt;">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>
            <Button fx:id="buttonRenameFile" minWidth="70.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="145.0"
                    text="rename" onAction="#renameFile">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>
            <Button fx:id="buttonDeleteFile" onAction="#deleteFile" minWidth="70.0" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="170.0" text="delete">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <font>
                    <Font size="11.0"/>
                </font>
            </Button>

        </VBox>
        <VBox prefHeight="498.0" prefWidth="377.0">

            <ListView fx:id="serverFileList" onMouseClicked="#updateServerFilesList" prefHeight="353.0"
                      prefWidth="303.0" VBox.vgrow="ALWAYS"/>

            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>

        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
</AnchorPane>
